<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/add_new_word_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/addWord"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/word_text"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/definition_text"
        android:layout_alignRight="@+id/definition_text"
        android:layout_below="@+id/add_new_word_title"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Word" />

    <EditText
        android:id="@+id/definition_text"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Define it"
        android:layout_margin="10dp"
        android:layout_below="@+id/word_text"
        android:inputType="textMultiLine"

        android:gravity="top" />

    <Button
        android:id="@+id/new_word_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/word_text"
        android:layout_below="@+id/add_new_word_title"
        android:layout_marginTop="24dp"
        android:padding="20dp"
        android:text="@string/addWord" />

    <Button
        android:id="@+id/cancel_new_word_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_alignRight="@+id/word_text"
        android:layout_below="@+id/add_new_word_title"
        android:layout_marginTop="30dp"
        android:text="@string/cancel" />

</RelativeLayout>